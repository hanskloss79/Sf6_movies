{% extends "./base.html.twig" %}

{% block body %}
	<div class="w-4/5 m-auto text-left pt-20">
		<div class="py-15">
			<h1 class="text-4xl">
				Edycja filmu {{ movie.title }}
			</h1>
		</div>
	</div>
	<div class="w-4/5 m-auto pt-20">
		{{ form_start(form) }}
		{{ form_widget(form) }}
